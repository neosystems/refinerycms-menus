<div class="field">
  <%= f.label :label %>
  <%= f.text_field :label %>
</div>

<%# if Refinery::Menus.html_attributes %>
  <div class="field">
    <%= f.label :title_attribute %>
    <%= f.text_field :title_attribute %>
  </div>

  <div class="field">
    <%= f.label :id_attribute, t('id_attribute', :scope => 'refinery.menus.admin.menu_links') %>
    <%= f.text_field :id_attribute %>
  </div>

  <div class="field">
    <%= f.label :class_attribute %>
    <%= f.text_field :class_attribute %>
  </div>
<%# end %>
<div class="field">
    <%= f.label :image_front, t('refinery.menu.admin.image_front') %>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_front_id,
               :image => menu_link.image_front,
               :toggle_image_display => false,
               :description => t('refinery.menu.admin.image_front')
    %>
  </div>

<div class="field">
  <%= f.label :original %>
  <div class='original-resource'><%= resource_link.resource_title %></div>
</div>